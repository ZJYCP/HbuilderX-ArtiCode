{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./dist",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "dom",
            "dom.iterable"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": false,
        "jsx": "react",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}